{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "web_accessible_resources": ["images/*.png", "styles/*.css"],
  "permissions": ["storage"],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  }
}
